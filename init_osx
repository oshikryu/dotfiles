#!/bin/bash

# install brew deps
brew update
brew install zsh
brew install python3
brew install git
brew install tmux
brew install cmake
brew install fzf
brew install ripgrep
brew install bat
brew install neovim
brew install pre-commit
brew install node
brew install reattach-user-to-namespace
brew install direnv


curl -fLo ~/.vim/autoload/plug.vim --create-dirs \
https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim

# change to zsh
sudo chsh -s /bin/zsh -y

rm ~/.profile
rm ~/.bash_profile
rm ~/.zprofile
rm ~/.zshrc

mv ~/.profile ~/.profile.bak

ln -s ~/.dot/profile.osx ~/.profile
ln -s ~/.dot/zprofile ~/.zprofile
ln -s ~/.dot/zshrc ~/.zshrc
ln -s ~/.dot/oh-my-zsh/ ~/.oh-my-zsh

ln -s ~/.dot/vim/ ~/.vim
ln -s ~/.dot/vimrc ~/.vimrc
ln -s ~/.dot/gvimrc ~/.gvimrc

ln -s ~/.dot/tmux.osx ~/.tmux.conf

ln -s ~/.dot/gitconfig ~/.gitconfig
ln -s ~/.dot/gitignore ~/.gitignore

ln -s ~/.dot/ipython_config.py ~/.ipython/profile_default/ipython_config.py
mkdir ~/.config/nvim
ln -s ~/.dot/init.lua ~/.config/nvim/init.lua
ln -s ~/.vim/autoload ~/.config/nvim/autoload

cp -r colors ~/.vim/

# pluginstall vim deps
nvim +'PlugInstall --sync' +qa

yarn global add prettier
